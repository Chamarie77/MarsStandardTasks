	"item": [
		{
			"name": "Create a new Record",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code check\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// JSON value check\r",
							"pm.test(\"Check key-value pairs in the response\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.data.name).to.eql(\"Nadee\");\r",
							"});\r",
							"\r",
							"// setting an environment parameter\r",
							"pm.test(\"Set employeeId as an environment variable\", function () {\r",
							"var jsonData = pm.response.json();\r",
							"pm.environment.set(\"employeeID\", jsonData.data.id);\r",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\": \"Nadee\",\r\n    \"salary\": \"123456\",\r\n    \"age\": \"47\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/create",
